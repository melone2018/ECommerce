<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="4dp">

    <TextView
        android:layout_gravity="center_horizontal"
        android:text="This is the Product Description"
        android:id="@+id/TextViewDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/ImageViewDetail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/hacker"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingStart="10dp">


        <TextView
            android:id="@+id/TextViewPName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Product Name: Product"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TextViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:text="Sale Price: 100$"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TextViewStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="In Stock Amount: 100"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/ButtonBuy"
        android:background="#d6af37"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:textSize="18dp"/>
</LinearLayout>

